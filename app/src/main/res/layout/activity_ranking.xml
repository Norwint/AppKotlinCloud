<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <com.otcengineering.white_app.components.TitleBar
            android:id="@+id/ranking_titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titlebar_title="@string/best_drive_ranking" />

        <com.otcengineering.white_app.components.CustomTabLayout
            android:id="@+id/ranking_customTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tab1text="@string/daily"
            app:tab2text="@string/weekly"
            app:tab3text="@string/monthly" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <Button
                    android:id="@+id/ranking_btnRankingType"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_rounded_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttonshape_luis"
                    android:drawableLeft="@drawable/arrow_dropdown"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/montserratnew"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/local_ranking"
                    android:textAllCaps="false"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="16sp"
                    android:visibility="invisible" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/ranking_btnGoToMyPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="@string/go_to_my_position"

                    android:textColor="@color/quantum_black_100"
                    android:textSize="16sp" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/signup_sep" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ranking_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            tools:listItem="@layout/row_ranking" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/ranking_btnScrollUp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/circle_red_background"
        android:visibility="gone">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/arrow_up_white" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ranking_layoutRankingType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/ranking_viewEmpty"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryTrans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ranking_btnGlobalRanking"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/global_ranking"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ranking_imgGlobalRankingCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/ranking_btnGlobalRanking"
                    android:src="@drawable/check_blue" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@color/signup_sep" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ranking_btnLocalRanking"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/local_ranking"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ranking_imgLocalRankingCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/ranking_btnLocalRanking"
                    android:src="@drawable/check_blue"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>