<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/navigation_tabDashboard"
            style="@style/tab_layout"
            android:visibility="visible">

            <ImageView
                style="@style/tab_icon"
                android:src="@drawable/tab_dashboard_icon" />

            <ImageView
                android:id="@+id/navigation_tabDashboardSelector"
                style="@style/tab_triangle" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/navigation_tabPoll"
            style="@style/tab_layout">
            <ImageView
                style="@style/tab_icon"
                android:src="@drawable/tab_poll_icon" />
            <ImageView
                android:id="@+id/navigation_tabPollSelection"
                style="@style/tab_triangle" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/navigation_tabMyDrive"
            style="@style/tab_layout">

            <ImageView
                style="@style/tab_icon"
                android:src="@drawable/tab_mydrive_icon" />

            <ImageView
                android:id="@+id/navigation_tabMyDriveSelector"
                style="@style/tab_triangle" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/navigation_tabLocation"
            style="@style/tab_layout">

            <ImageView
                style="@style/tab_icon"
                android:src="@drawable/tab_location_icon" />

            <ImageView
                android:id="@+id/navigation_tabLocationSelector"
                style="@style/tab_triangle" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/navigation_tabCommunity"
            style="@style/tab_layout">

            <ImageView
                style="@style/tab_icon"
                android:src="@drawable/tab_community_icon" />

            <ImageView
                android:id="@+id/navigation_tabCommunitySelector"
                style="@style/tab_triangle" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/navigation_tabPayment"
            style="@style/tab_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/tab_icon"
                android:src="@drawable/tab_payment_icon" />

            <ImageView
                android:id="@+id/navigation_tabPaymentSelector"
                style="@style/tab_triangle" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/navigation_tabKeyless"
            style="@style/tab_layout"
            android:visibility="gone">

            <ImageView
                style="@style/tab_icon"
                android:src="@android:drawable/ic_lock_power_off" />

            <ImageView
                android:id="@+id/navigation_tabKeylessSelector"
                style="@style/tab_triangle" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>