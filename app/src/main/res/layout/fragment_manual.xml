<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <Button
        android:id="@+id/manual_btnDownload"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_rounded_height"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/button_invite_background"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/download_pdf"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/manual_txtNewVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/manual_btnDownload"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/manual_new_version"
        android:textColor="@color/quantum_black_100"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>