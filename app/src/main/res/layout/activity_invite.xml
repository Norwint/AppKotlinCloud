<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.otcengineering.white_app.components.TitleBar
        android:id="@+id/invite_titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlebar_title="@string/invite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/info_imgUser"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/user_placeholder"
                app:civ_border_color="@color/signup_sep"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/invite_txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_imgUser"
                android:layout_centerHorizontal="true"
                android:textColor="@color/quantum_black_100"
                android:textSize="18sp"
                tools:text="Username" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/obligation"
                android:textSize="10dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:text="@string/message_obligation" />

        <EditText
            android:id="@+id/invite_editMessage"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_share"
            android:gravity="top"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="4"
            android:padding="10dp"
            android:textColor="@color/quantum_black_100"
            android:theme="@style/SwitchColor" />

        <TextView
            android:id="@+id/invite_txtChars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/max_chars"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/layout_border" />

    <Button
        android:id="@+id/invite_btnInvite"
        android:layout_width="150dp"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonshape_luis"
        android:enabled="false"
        android:fontFamily="@font/montserratnew"
        android:text="@string/invite"
        android:textAllCaps="false"
        android:textColor="@color/layout_border"
        android:textSize="16sp" />
</LinearLayout>