<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_rounded_height"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/search_btnAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.33"
            android:background="@drawable/button_left_background"
            android:fontFamily="@font/montserratnew"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/all"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color"
            android:textSize="16sp" />

        <Button
            android:id="@+id/search_btnNear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.33"
            android:background="@drawable/button_center_background"
            android:fontFamily="@font/montserratnew"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/near_to_you"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color"
            android:textSize="16sp" />

        <Button
            android:id="@+id/search_btnFriends"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.33"
            android:background="@drawable/button_right_background"
            android:fontFamily="@font/montserratnew"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/friends"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:background="@color/signup_sep" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:visibility="visible"
            tools:listItem="@layout/row_ranking" />

        <TextView
            android:id="@+id/search_txtNoResults"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/search_no_results"
            android:textColor="@color/quantum_black_100"
            android:textSize="16sp"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/search_btnScrollUp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_red_background"
            android:backgroundTint="@color/colorPrimary"
            android:visibility="gone">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow_up_white" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/search_layoutSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittextshape"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/search_editSearch"
            android:layout_width="0dp"
            android:layout_height="@dimen/edit_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/search"
            android:inputType="textPersonName"
            android:textColor="@color/quantum_black_100"
            android:textColorHint="@color/colorPrimary"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/search_btnDeleteSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_clear_black_24dp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/friends_layoutMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/friends_btnCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:gravity="center"
            android:text="@string/cancelar"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorWhite" />

        <TextView
            android:id="@+id/friends_btnSelectAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:gravity="center"
            android:text="@string/select_all"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorWhite" />

        <TextView
            android:id="@+id/friends_btnUnfriend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:gravity="center"
            android:text="@string/unfriend"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
