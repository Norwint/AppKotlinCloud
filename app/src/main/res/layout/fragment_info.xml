<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TitleDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/info_btnInvite"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_rounded_height"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/button_invite_background"
                    android:text="@string/invite"
                    android:textAllCaps="false"
                    android:textColor="@color/button_text_color"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/info_imgUser"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/user_placeholder_correct"
                        app:civ_border_color="@color/signup_sep"
                        app:civ_border_width="1dp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/info_imgUser"
                        android:layout_alignTop="@+id/info_imgUser"
                        android:layout_marginLeft="50dp"
                        android:layout_toRightOf="@+id/info_imgUser">

                        <FrameLayout
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:background="@drawable/layout_border_primary_color">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="B"
                                android:textColor="@color/quantum_black_100"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </FrameLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/info_txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/info_imgUser"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/quantum_black_100"
                        android:textSize="18sp"
                        tools:text="Username" />

                    <TextView
                        android:id="@+id/info_txtModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/info_txtName"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/signup_sep"
                        android:textSize="12sp"
                        tools:text="" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/info_btnThreeDots"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:src="@drawable/three_dots_vertical" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/globalRanking"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/my_shadow_bg">

                            <ImageView
                                android:id="@+id/GlobalIconTop"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:background="@drawable/my_edittext_bg"
                                android:padding="10dp"
                                android:src="@drawable/my_drive_icons_17" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/global_ranking_best_drive"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textGlobalTop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/textButton"
                            android:textSize="30sp"
                            tools:text="1" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_drive_icons_17"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/localRanking"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/my_shadow_bg">

                            <ImageView
                                android:id="@+id/LocalIconTop"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:background="@drawable/my_edittext_bg"
                                android:padding="10dp"
                                android:src="@drawable/my_drive_icons_17" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/local_ranking_best_drive"
                            android:textAlignment="center"
                            android:textColor="@color/quantum_black_100"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textLocalTop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/textButton"
                            android:textSize="30sp"
                            tools:text="1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mileage"
                        android:textColor="@color/quantum_black_100"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/my_edittext_bg"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/mileageOpen"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:background="@drawable/go_to_charts_states"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <com.ethanco.circleprogresslibrary.CircleProgress
                                android:id="@+id/progressMileage"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                custom:bgColor="#eaedf2"
                                custom:currProgress="160"
                                custom:foreEndColor="#c60034"
                                custom:foreStartColor="@color/colorPrimary"
                                custom:maxProgress="360"
                                custom:progressInitialPosition="100"
                                custom:progressWidth="8dp"
                                custom:useAnimation="true" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/average"
                                    android:textColor="#9999B8"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/AverageMileage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/quantum_black_100"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    tools:text="56,3 km" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total"
                                    android:textColor="#9999B8"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/TotalMileage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/quantum_black_100"
                                    android:textSize="14sp"
                                    tools:text="120,3 km" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/RankingLocalMileage"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/my_edittext_bg2_states"
                                android:clickable="false"
                                android:focusable="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <ImageView
                                    android:id="@+id/LocalIconMileage"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/my_drive_icons_17" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="@string/local"
                                    android:textColor="#AFAEC6" />

                                <TextView
                                    android:id="@+id/LocalMileage"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:textColor="@color/textButton"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    tools:text="1" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/RankingGlobalMileage"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/my_edittext_bg3_states"
                                android:clickable="false"
                                android:focusable="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:visibility="invisible">

                                <ImageView
                                    android:id="@+id/GlobalIconMileage"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/my_drive_icons_17" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="@string/global"
                                    android:textColor="#AFAEC6" />

                                <TextView
                                    android:id="@+id/GlobalMileage"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:textColor="@color/textButton"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    tools:text="1" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/eco_driving"
                        android:textColor="@color/quantum_black_100"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/my_edittext_bg"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ecoOpen"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:background="@drawable/go_to_charts_states"
                            android:clickable="false"
                            android:focusable="true"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <com.ethanco.circleprogresslibrary.CircleProgress
                                android:id="@+id/progressEco"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                custom:bgColor="#eaedf2"
                                custom:currProgress="160"
                                custom:foreEndColor="#c60034"
                                custom:foreStartColor="@color/colorPrimary"
                                custom:maxProgress="360"
                                custom:progressInitialPosition="100"
                                custom:progressWidth="8dp"
                                custom:useAnimation="true" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/km_liters"
                                    android:textColor="#9999B8"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/AverageEco"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/quantum_black_100"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    tools:text="3 km" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total"
                                    android:textColor="#9999B8"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/TotalEco"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/quantum_black_100"
                                    android:textSize="14dp"
                                    tools:text="23 liters" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/RankingLocalEco"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/my_edittext_bg2_states"
                                android:clickable="false"
                                android:focusable="true"
                                android:orientation="horizontal"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="5dp">

                                <ImageView
                                    android:id="@+id/LocalIconEco"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/my_drive_icons_17" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/local"
                                        android:textColor="#AFAEC6" />

                                    <TextView
                                        android:id="@+id/LocalEco"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/quantum_black_100"
                                        android:textSize="16dp"
                                        tools:text="Top 300" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/RankingGlobalEco"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/my_edittext_bg3_states"
                                android:clickable="false"
                                android:focusable="true"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp"
                                android:paddingTop="5dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="5dp"
                                android:visibility="invisible">

                                <ImageView
                                    android:id="@+id/GlobalIconEco"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/my_drive_icons_17" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/global"
                                        android:textColor="#AFAEC6" />

                                    <TextView
                                        android:id="@+id/GlobalEco"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/quantum_black_100"
                                        android:textSize="16dp"
                                        tools:text="Top 1M" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/safety_driving"
                            android:textColor="@color/quantum_black_100"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/safetyOpen"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:background="@drawable/my_edittext_bg_states"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal">

                            <com.ethanco.circleprogresslibrary.CircleProgress
                                android:id="@+id/progressSafety"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                custom:bgColor="#eaedf2"
                                custom:currProgress="160"
                                custom:foreEndColor="#c60034"
                                custom:foreStartColor="@color/colorPrimary"
                                custom:maxProgress="360"
                                custom:progressInitialPosition="100"
                                custom:progressWidth="8dp"
                                custom:useAnimation="true" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/score" />

                                <TextView
                                    android:id="@+id/SafetyDriving"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/quantum_black_100"
                                    android:textSize="18sp"
                                    tools:text="2.2" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>