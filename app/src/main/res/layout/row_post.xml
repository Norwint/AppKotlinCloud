<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/row_post_txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical|end"
            android:layout_weight="1"
            android:text="1 d."
            android:textAlignment="textEnd"
            android:textColor="@color/strokeButton"
            android:textSize="12sp"
            tools:text="1 d." />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_border"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/row_post_layoutUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_border_upper_filled"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/row_post_imgUser"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/user_placeholder_correct"
                app:civ_border_color="@color/signup_sep"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/row_post_txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Clarence McKinney"
                        android:textColor="@color/quantum_black_100"
                        android:textSize="18sp"
                        tools:text="Clarence McKinney" />

                </LinearLayout>

                <TextView
                    android:id="@+id/row_post_txtPositionAndPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="1 / Profile visible"
                    android:textColor="@color/signup_sep"
                    android:textSize="18sp"
                    tools:text="1 / Profile visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_post_layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/row_post_txtTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/title_of_route"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="16sp"
                    tools:text="Title of the route" />

                <ImageView
                    android:id="@+id/row_post_btnMenu"
                    android:layout_width="33dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:src="@drawable/three_dots" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/layout_border" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_post_layoutMileageEcoSafety"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/row_post_txtDate"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="30\nSep.\n2017"
                    android:textAlignment="center"
                    android:textColor="@color/signup_sep"
                    android:textSize="12sp"
                    tools:text="30\nSep.\n2017" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/layout_border" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/row_post_txtUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12.2 km - 0:42"
                        android:textColor="@color/quantum_black_100"
                        android:textSize="18sp"
                        tools:text="12.2 km - 0:42" />

                    <TextView
                        android:id="@+id/row_post_txtDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Global: Top 50 / Local: Top 50"
                        android:textColor="@color/signup_sep"
                        android:textSize="14sp"
                        tools:text="Global: Top 50 / Local: Top 50" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/layout_border" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_post_layoutImageAndPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <FrameLayout
                    android:id="@+id/row_post_layoutImage"
                    android:layout_width="101dp"
                    android:layout_height="101dp">

                    <com.otcengineering.white_app.components.RoundedCornersImageView
                        android:id="@+id/row_post_img"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/map_fake" />

                    <ImageView
                        android:id="@+id/row_post_imgVideo"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/video"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layout_border" />
                </FrameLayout>

                <TextView
                    android:id="@+id/row_post_txtPost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="5"
                    android:text=""
                    android:textColor="@color/quantum_black_100"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/layout_border" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_post_layoutRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/row_post_txtDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01:02 h."
                        android:textColor="@color/secondaryText"
                        android:textSize="16sp"
                        tools:text="01:02 h." />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/layout_border" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/row_post_txtDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,000.5 km"
                        android:textColor="@color/secondaryText"
                        android:textSize="16sp"
                        tools:text="1,000.5 km" />

                    <TextView
                        android:id="@+id/row_post_txtConsumption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="100 l."
                        android:textColor="@color/secondaryText"
                        android:textSize="16sp"
                        tools:text="100 l." />

                    <TextView
                        android:id="@+id/row_post_txtConsumptionAvg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 km./l."
                        android:textColor="@color/secondaryText"
                        android:textSize="16sp"
                        tools:text="10 km./l." />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/layout_border" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/row_post_txtDrivingTechnique"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.4"
                        android:textColor="@color/secondaryText"
                        android:textSize="16sp"
                        tools:text="4.4" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/layout_border" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/row_post_btnLike"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.425"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/like" />

                <TextView
                    android:id="@+id/row_post_txtLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/secondaryText"
                    android:textSize="18sp"
                    tools:text="1k" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/layout_border" />

            <FrameLayout
                android:id="@+id/row_post_btnFav"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/my_routes_icons_3" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/row_post_btnMenu2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/three_dots" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/row_post_viewPadding"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
</LinearLayout>