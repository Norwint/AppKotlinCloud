<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <com.otcengineering.white_app.components.TitleBar
            android:id="@+id/send_post_titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titlebar_show_right1_button="true"
            app:titlebar_title="@string/send_post" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:paddingBottom="70dp">

                <Button
                    android:id="@+id/send_post_btnPostType"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_rounded_height"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/buttonshape_luis"
                    android:drawableLeft="@drawable/arrow_dropdown"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/montserratnew"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/post_type_text"
                    android:textAllCaps="false"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/send_post_layoutMileageEcoSafety"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/send_post_txtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/mileage"
                        android:textColor="@color/quantum_black_100"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/layout_border"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/send_post_txtDate"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textColor="@color/signup_sep"
                            android:textSize="16sp"
                            tools:text="30\nSep.\n2017" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/layout_border" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/send_post_txtUp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/quantum_black_100"
                                android:textSize="18sp"
                                tools:text="12.2 km - 0:42" />

                            <TextView
                                android:id="@+id/send_post_txtDown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/signup_sep"
                                android:textSize="14sp"
                                tools:text="Global: Top 50 / Local: Top 50" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/send_post_layoutCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/send_post_checkCommunity"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/check_background"
                            android:checked="true"
                            android:textOff=""
                            android:textOn="" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="@string/share_connectech_community"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/send_post_checkFriends"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/check_background"
                            android:textOff=""
                            android:textOn="" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="@string/share_connectech_friends"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/message" />

                <EditText
                    android:id="@+id/send_post_editMessage"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_share"
                    android:gravity="top"
                    android:hint="@string/write_here"
                    android:inputType="textCapSentences|textMultiLine"
                    android:lines="4"
                    android:padding="10dp"
                    android:textColor="@color/quantum_black_100"
                    android:theme="@style/SwitchColor"
                    />

                <TextView
                    android:id="@+id/send_post_txtChars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/max_chars"
                    android:textColor="@color/textButton"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/send_post_layoutImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/add_picture" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/send_post_btnAddImage"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginLeft="10dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/add_poi_image" />

                            <ImageView
                                android:id="@+id/send_post_imgPost"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:visibility="gone" />
                        </FrameLayout>

                        <ImageView
                            android:id="@+id/send_post_btnDeleteImage"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:padding="5dp"
                            android:src="@drawable/delete"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/send_post_layoutVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/add_video_link" />

                    <EditText
                        android:id="@+id/send_post_editVideo"
                        style="@style/Widget.AppCompat.EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/shape_share"
                        android:gravity="top"
                        android:hint="https://youtu.be/XIMLoLxmTDw"
                        android:inputType="textCapSentences"
                        android:lines="1"
                        android:padding="10dp"
                        android:textColor="@color/quantum_black_100"
                        android:theme="@style/SwitchColor" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/send_post_layoutRoute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/add_route" />

                    <ImageView
                        android:id="@+id/send_post_btnAddRoute"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerInside"
                        android:src="@drawable/add_poi_image" />

                    <LinearLayout
                        android:id="@+id/send_post_layoutRouteInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/layout_border"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="8dp"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:paddingTop="8dp">

                                <TextView
                                    android:id="@+id/send_post_txtTitleRoute"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/title"
                                    android:textColor="@color/quantum_black_100"
                                    android:textSize="16sp"
                                    tools:text="Title of the route" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/layout_border" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp">

                                <ImageView
                                    android:id="@+id/send_post_imgMap"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/map_landscape_fake" />
                            </FrameLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/layout_border" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.25"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp">

                                    <TextView
                                        android:id="@+id/send_post_txtDuration"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/secondaryText"
                                        android:textSize="14sp"
                                        tools:text="01:02 h." />
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/layout_border" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp">

                                    <TextView
                                        android:id="@+id/send_post_txtDistance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/secondaryText"
                                        android:textSize="14sp"
                                        tools:text="1,000.5 km" />

                                    <TextView
                                        android:id="@+id/send_post_txtConsumption"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="15dp"
                                        android:textColor="@color/secondaryText"
                                        android:textSize="14sp"
                                        tools:text="100 l." />

                                    <TextView
                                        android:id="@+id/send_post_txtConsumptionAvg"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/secondaryText"
                                        android:textSize="14sp"
                                        tools:text="10 km./l." />
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/layout_border" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.15"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp">

                                    <TextView
                                        android:id="@+id/send_post_txtDrivingTechnique"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/secondaryText"
                                        android:textSize="14sp"
                                        tools:text="4.4" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white_80_alpha"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/layout_border" />

        <Button
            android:id="@+id/send_post_btnSave"
            android:layout_width="150dp"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonshape_luis"
            android:enabled="false"
            android:fontFamily="@font/montserratnew"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/layout_border"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>