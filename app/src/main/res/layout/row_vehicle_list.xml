<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.otcengineering.white_app.data.Vehicle" />

        <variable
            name="index"
            type="int" />

        <variable
            name="itemClickListener"
            type="com.otcengineering.white_app.utils.interfaces.OnClickListener" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_height="80dp">

            <ImageView
                android:layout_marginStart="20dp"
                android:id="@+id/carPicture"
                android:layout_marginTop="15dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@{model.vehicleImage}" />

            <TextView
                android:id="@+id/vehicle_name"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.vehicleName}"/>

            <ImageView
                android:layout_marginEnd="20dp"
                android:id="@+id/options"
                android:layout_gravity="end"
                android:layout_marginTop="25dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:onClick="@{(v) -> itemClickListener.onItemClick(v, model)}"
                android:src="@drawable/ic_baseline_settings_24" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>