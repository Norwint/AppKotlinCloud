<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color of the border -->





    <stroke
        android:width="3dp"
        android:color="#E6E8EC"

        android:shadowColor="#E6E8EC"
        android:shadowDx="50"
        android:shadowDy="20"
