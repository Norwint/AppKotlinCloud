<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/chart_bar_blue_start</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="NewThem" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#d7d7d7</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:titleTextStyle">@style/ActionBar.Solid.Ribbit.TitleTextStyle</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="ActionBar.Solid.Ribbit.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NewThem.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">#00397F</item>
        <item name="android:colorAccent">@color/textButton</item>
    </style>

    <style name="SwitchColor" parent="Theme.AppCompat.Light">
        <!-- active thumb_form & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!-- inactive thumb_form color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="CheckBoxColor" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>


    <style name="tab_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tab_icon">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tab_triangle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:src">@drawable/menu_icons1</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="wallet_image_selected">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:alpha">0.8</item>
        <item name="android:src">@drawable/check_white</item>
    </style>

    <style name="wallet_image_unselected_background">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="wallet_image_selected_background" parent="wallet_image_unselected_background">
        <item name="android:alpha">0.8</item>
        <item name="android:background">@drawable/button_rounded_red</item>
    </style>

    <style name="wallet_trash_icon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/my_routes_icons_27</item>
    </style>

    <style name="wallet_trash_icon_background">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/circle_white_background</item>
    </style>

</resources>
